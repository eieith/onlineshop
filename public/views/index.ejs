<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <header>
        <div id="logo">
            <h1>KAZ</h1>
            <h2>Handmade Shop</h2>
            <p>Your one-stop shop for handmade items</p>
        </div>
        <div class="nav">
            <ul id="nav">
                <li><a href="/">Home</a></li>
                <li><a href="/display">Items</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/review">Review</a></li>
            </ul>
        </div>
    </header>

    <!-- Products Section -->
    <section class="products">
        <h1>Popular Items</h1>
        <div id="productsContainer">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-item">
                       <img src="<%= product.img_url %>" alt="<%= product.name %>" />
                        <h3><%= product.name %></h3>
                        <p><strong>Price:</strong> $<%= product.price %></p>
                        <p><%= product.description %></p>
                        <button onclick='addToCart("<%= product.name %>", "<%= product.price %>", "<%= product.id %>")'>
                            Add to Cart
                        </button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products available at the moment. Please check back later!</p>
            <% } %>
        </div>
    </section>
 <!-- About Section -->
 <section class="about">
    <h2>About Us</h2>
    <p>Welcome to KAZ Handmade Shop, where every item is crafted with love!</p>
</section>

<!-- Contact Info Section -->
<section class="contact-info">
    <h2>Contact Info</h2>
    <p>Email: kazshop@example.com</p>
    <p>Phone: (123) 456-7890</p>
</section>

<!-- Footer Section -->
<footer>
    <p>&copy; 2024 KAZ Handmade Shop. All Rights Reserved.</p>
</footer>
    <script src="js/script.js"></script>
  
</body>
</html>
